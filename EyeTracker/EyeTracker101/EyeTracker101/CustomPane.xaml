<UserControl x:Class="EyeTracker101.CustomPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EyeTracker101"
             xmlns:controls="clr-namespace:Presentation.Controls;assembly=Presentation"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="900">
    <Grid>
        <Grid.Resources>
            <Style TargetType="controls:OverlayedButton">
                <Setter Property="Margin" Value="20"/>
                <Setter Property="Width" Value="350"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <controls:OverlayedButton Grid.Row="0" Grid.Column="0" Name="button0"></controls:OverlayedButton>
        <controls:OverlayedButton Grid.Row="0" Grid.Column="1" Name="button1"></controls:OverlayedButton>
        <controls:OverlayedButton Grid.Row="0" Grid.Column="2" Name="button2"></controls:OverlayedButton>
    </Grid>
</UserControl>
