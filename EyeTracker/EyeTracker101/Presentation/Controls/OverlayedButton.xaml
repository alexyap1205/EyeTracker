<UserControl x:Class="Presentation.Controls.OverlayedButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Image">
                <Setter Property="Width" Value="300"/>
                <Setter Property="Height" Value="300"/>
            </Style>
        </Grid.Resources>
        <Button Name="btnDisplay" Panel.ZIndex="1" IsHitTestVisible="True" FontSize="48"></Button>
        <Image Name="imgOne" Source="../Images/Countdown1.png" Panel.ZIndex="2" Opacity="0"></Image>
        <Image Name="imgTwo" Source="../Images/Countdown2.png" Panel.ZIndex="3" Opacity="0"></Image>
        <Image Name="imgThree" Source="../Images/Countdown3.png" Panel.ZIndex="4" Opacity="0"></Image>
        <Image Name="imgFour" Source="../Images/Countdown4.png" Panel.ZIndex="5" Opacity="0"></Image>
        <Image Name="imgFive" Source="../Images/Countdown5.png" Grid.ZIndex="6" Opacity="0"></Image>
    </Grid>
</UserControl>
